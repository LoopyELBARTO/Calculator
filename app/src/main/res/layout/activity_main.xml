<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/answerET"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:cursorVisible="false"
        android:clickable="false"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:gravity="right"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapClear"
            android:text="C"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapBackspace"
            android:text="DEL"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/divisionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapDivide"
            android:text="/"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/multiplyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapMultiply"
            android:text="\u00D7"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapSeven"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapEight"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapNine"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/minusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapMinus"
            android:text="-"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapFour"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapFive"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapSix"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapAdd"
            android:text="+"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapOne"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapTwo"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapThree"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/equalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_margin="5dp"
            android:layout_rowSpan="2"
            android:width="90dp"
            android:background="@drawable/capsule_equal_button"
            android:fontFamily="monospace"
            android:onClick="tapEqual"
            android:text="="
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/percentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapPercent"
            android:text="%"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_numbers"
            android:fontFamily="monospace"
            android:onClick="tapZero"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/dotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:width="90dp"
            android:height="90dp"
            android:background="@drawable/round_button_operands"
            android:fontFamily="monospace"
            android:onClick="tapDot"
            android:text="."
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="4" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>